<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddInfo.AddFoodDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:paddingTop="30dp"
            android:id="@+id/txtFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название еды:"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints">
        </TextView>
        <EditText
            android:id="@+id/Name_Food"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFood">
        </EditText>
        <TextView
            android:paddingTop="30dp"
            android:id="@+id/txtGrams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Количество грамм:"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/Name_Food">
        </TextView>
        <EditText
            android:id="@+id/edtGrams"
            android:layout_width="match_parent"
            android:inputType="number"
            android:text="0"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGrams">
        </EditText>
        <TextView
            android:paddingTop="30dp"
            android:id="@+id/txtCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Количество калорий:"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/edtGrams">
        </TextView>
        <EditText
            android:id="@+id/edtCalories"
            android:layout_width="match_parent"
            android:inputType="number"
                android:text="0"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCalories">
        </EditText>
        <TextView
            android:id="@+id/txtDescrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание:"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/edtCalories">
        </TextView>
        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDescrip" />
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата:"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/edtDescription">
        </TextView>
        <EditText
            android:id="@+id/edtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="20dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDate"
            android:hint="Введите дату приема" />
        <TextView
            android:paddingTop="30dp"
            android:id="@+id/txtEating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Время приёма пищи:"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/edtDate">
        </TextView>
        <Spinner
            android:id="@+id/spinEating"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEating">
        </Spinner>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/AddButFood"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="30dp"
            android:layout_marginBottom="379dp"
            android:backgroundTint="@color/btn_reg"
            android:text="Добавить"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinEating"
            tools:layout_editor_absoluteX="30dp"></com.google.android.material.button.MaterialButton>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>