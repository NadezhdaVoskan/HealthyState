<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="305dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:paddingTop="20dp"
            android:id="@+id/layoutTextInputOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">
            <androidx.appcompat.widget.AppCompatEditText
                android:textSize="18dp"
                android:id="@+id/EmailLogin"
                android:text=""
                android:drawableEnd="@drawable/ic_email"
                android:imeOptions="actionNext"
                android:layout_marginBottom="8dp"
                android:inputType="text"
                android:hint="Логин"
                android:background="@drawable/stylenull"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTextInput"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/show_password_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutTextInputOne">
            <androidx.appcompat.widget.AppCompatEditText
                android:textSize="18dp"
                android:text=""
                android:id="@+id/PasswordLogin"
                android:imeOptions="actionNext"
                android:layout_marginBottom="8dp"
                android:inputType="textPassword"
                android:hint="Пароль"
                android:background="@drawable/stylenull"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toLoginBut"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="379dp"
            android:backgroundTint="@color/btn_reg"
            android:text="Войти"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutTextInput"
            tools:layout_editor_absoluteX="30dp"></com.google.android.material.button.MaterialButton>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>